<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flowersFragment"
    android:background="@color/red_200"
    tools:context=".fragment.FlowersChoiceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/clickFlowers_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/click_on_images_to_set_details"
            android:textColor="@color/red_500"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <liubomyr.stepanenko.spouse.model.RoundedImageView
            android:id="@+id/roses_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/roses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clickFlowers_textView" />

        <liubomyr.stepanenko.spouse.model.RoundedImageView
            android:id="@+id/peonies_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/peonies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clickFlowers_textView" />

        <liubomyr.stepanenko.spouse.model.RoundedImageView
            android:id="@+id/freesias_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/freesias"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clickFlowers_textView" />

        <TextView
            android:id="@+id/roses_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/roses"
            android:textColor="@color/red_500"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/roses_imageView"
            app:layout_constraintEnd_toEndOf="@id/roses_imageView"
            app:layout_constraintTop_toBottomOf="@id/roses_imageView" />

        <TextView
            android:id="@+id/peonies_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/peonies"
            android:textColor="@color/red_500"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/peonies_imageView"
            app:layout_constraintEnd_toEndOf="@id/peonies_imageView"
            app:layout_constraintTop_toBottomOf="@id/peonies_imageView" />

        <TextView
            android:id="@+id/freesias_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/freesias"
            android:textColor="@color/red_500"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/freesias_imageView"
            app:layout_constraintEnd_toEndOf="@id/freesias_imageView"
            app:layout_constraintTop_toBottomOf="@id/freesias_imageView" />

        <TextView
            android:id="@+id/totalSum_flowers_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/total_flowers_sum"
            android:textColor="@color/red_500"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peonies_textView" />

        <EditText
            android:id="@+id/flowersComments_editText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="100dp"
            android:ems="10"
            android:textColor="@color/white"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flowersComments_textView" />

        <TextView
            android:id="@+id/flowersComments_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:text="@string/comments"
            android:textColor="@color/red_500"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalSum_flowers_textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>