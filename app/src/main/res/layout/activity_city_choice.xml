<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/red_200"
    tools:context=".creation.CityChoice">

    <TextView
        android:id="@+id/cityChoice_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/choose_your_city"
        android:textColor="@color/red_500"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <liubomyr.stepanenko.spouse.model.RoundedImageView
        android:id="@+id/kyiv_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/kyiv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityChoice_textView" />

    <liubomyr.stepanenko.spouse.model.RoundedImageView
        android:id="@+id/lviv_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/lviv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityChoice_textView" />

    <liubomyr.stepanenko.spouse.model.RoundedImageView
        android:id="@+id/kharkiv_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/kharkiv"
        app:layout_constraintBottom_toTopOf="@+id/dnipro_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kyiv_image" />

    <liubomyr.stepanenko.spouse.model.RoundedImageView
        android:id="@+id/odesa_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/odesa"
        app:layout_constraintBottom_toTopOf="@+id/dnipro_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lviv_image" />

    <liubomyr.stepanenko.spouse.model.RoundedImageView
        android:id="@+id/dnipro_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/dnipro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/kyiv_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/kyiv"
        android:textColor="@color/red_500"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/kyiv_image"
        app:layout_constraintStart_toStartOf="@id/kyiv_image"
        app:layout_constraintTop_toBottomOf="@id/kyiv_image" />

    <TextView
        android:id="@+id/lviv_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/lviv"
        android:textColor="@color/red_500"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/lviv_image"
        app:layout_constraintStart_toStartOf="@id/lviv_image"
        app:layout_constraintTop_toBottomOf="@id/lviv_image" />

    <TextView
        android:id="@+id/kharkiv_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/kharkiv"
        android:textColor="@color/red_500"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/kharkiv_image"
        app:layout_constraintStart_toStartOf="@id/kharkiv_image"
        app:layout_constraintTop_toBottomOf="@id/kharkiv_image" />

    <TextView
        android:id="@+id/odesa_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/odesa"
        android:textColor="@color/red_500"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/odesa_image"
        app:layout_constraintStart_toStartOf="@id/odesa_image"
        app:layout_constraintTop_toBottomOf="@id/odesa_image" />

    <TextView
        android:id="@+id/dnipro_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/dnipro"
        android:textColor="@color/red_500"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/dnipro_image"
        app:layout_constraintStart_toStartOf="@id/dnipro_image"
        app:layout_constraintTop_toBottomOf="@id/dnipro_image" />

</androidx.constraintlayout.widget.ConstraintLayout>