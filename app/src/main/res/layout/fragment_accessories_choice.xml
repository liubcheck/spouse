<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accessoriesFragment"
    android:background="@color/red_200"
    tools:context=".fragment.AccessoriesChoiceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/clickAccessories_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/click_on_images_to_set_details"
            android:textColor="@color/red_500"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <liubomyr.stepanenko.spouse.model.RoundedImageView
            android:id="@+id/manyBalloons_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/many_balloons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clickAccessories_textView" />

        <liubomyr.stepanenko.spouse.model.RoundedImageView
            android:id="@+id/heartBalloons_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/heart_balloons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clickAccessories_textView" />

        <liubomyr.stepanenko.spouse.model.RoundedImageView
            android:id="@+id/archBalloons_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/arch_balloons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clickAccessories_textView" />

        <TextView
            android:id="@+id/manyBalloons_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/balloons"
            android:textColor="@color/red_500"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/manyBalloons_imageView"
            app:layout_constraintEnd_toEndOf="@id/manyBalloons_imageView"
            app:layout_constraintTop_toBottomOf="@id/manyBalloons_imageView" />

        <TextView
            android:id="@+id/heartBalloons_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/heart"
            android:textColor="@color/red_500"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/heartBalloons_imageView"
            app:layout_constraintEnd_toEndOf="@id/heartBalloons_imageView"
            app:layout_constraintTop_toBottomOf="@id/heartBalloons_imageView" />

        <TextView
            android:id="@+id/archBalloons_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/arch"
            android:textColor="@color/red_500"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/archBalloons_imageView"
            app:layout_constraintEnd_toEndOf="@id/archBalloons_imageView"
            app:layout_constraintTop_toBottomOf="@id/archBalloons_imageView" />

        <TextView
            android:id="@+id/totalSum_accessories_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/total_accessories_sum"
            android:textColor="@color/red_500"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heartBalloons_textView" />

        <EditText
            android:id="@+id/accessoriesComments_editText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="100dp"
            android:ems="10"
            android:gravity="start|top"
            android:textColor="@color/white"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accessoriesComments_textView" />

        <TextView
            android:id="@+id/accessoriesComments_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:text="@string/comments"
            android:textColor="@color/red_500"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalSum_accessories_textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>